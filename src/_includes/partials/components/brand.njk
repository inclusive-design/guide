{% if locale and lang !== defaultLanguage %}
{% set homeUrl = "/" + supportedLanguages[locale].slug %}
{% else %}
{% set lang = defaultLanguage %}
{% set homeUrl = "/" %}
{% endif %}

<a rel="home" href="{{ homeUrl }}"{% if page.url === homeUrl %} aria-current="page"{% endif %}>
    {% include "node_modules/idg-design-system/dist/static/svg/idrc.svg" %}
    <span>{{ site[locale].name }}</span>
</a>
