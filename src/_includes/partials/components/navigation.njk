            {% if not locale %}
            {% set locale = self.locale %}
            {% endif %}
            <nav aria-labelledby="navigation" x-data="{open: false}">
                {% include "partials/components/brand.njk" %}
                <button aria-expanded="false" x-bind:aria-expanded="open" @click="open = !open">
                    {% include "node_modules/idg-design-system/dist/static/svg/close.svg" %}
                    {% include "node_modules/idg-design-system/dist/static/svg/menu.svg" %}
                    <span class="label">{% _ locale, "menu" %}</span>
                </button>
                <div class="inner flow">
                    <h2 id="navigation">{% _ locale, "Menu" %}</h2>
                    <ul role="list">
                    {% for item in pages %}
                        {% if item.order > 1 and item.locale === locale %}
                        <li>
                            <a class="--{{ item.uid }}" href="{{ item | permalink }}"{% if item | permalink == page.url %} aria-current="page"{% endif %}>{{ item.title }}</a>
                        </li>
                        {% endif %}
                    {% endfor %}
                    {% for item in index %}
                        {% if item.uid === self.uid and item.locale != self.locale %}
                        <li>
                            <a hreflang="{{ item.locale }}" href="{{ item | permalink }}">{{ "English" if item.locale === "en-CA" else 'Fran√ßais' }}</a>
                        </li>
                        {% endif %}
                    {% endfor %}
                    </ul>
                </div>
            </nav>
